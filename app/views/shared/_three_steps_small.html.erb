      <div class="large-4 columns steps-shell">
        <%= image_tag "#{aws_web_image_path}/pigeon_steps_1_small.png" %>
        <p>Take a picture with your phone as you normally would</p>
      </div>
      <div class="large-4 columns steps-shell">
        <%= image_tag "#{aws_web_image_path}/pigeon_steps_2_small.png" %>
