       <% if current_user %>
          <li><%= link_to 'My Account', user_path(current_user) %></li>
          <li><%= link_to 'Signout', signout_path %></li>
        <% else %>
          <li class="divider"></li>
          <li><%= link_to 'Sign Up', signup_path %></li>
          <li class="divider"></li>
          <li><%= link_to 'Sign In', signin_path %></li>
        <% end %>
    </ul>
  </section>
