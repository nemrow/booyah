<nav class="top-bar">
  <ul class="title-area">
    <li class="name"><%= link_to image_tag('booyah-logo-2-web.png', :class => 'header-logo'), root_path %></li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
  <section class="top-bar-section <%= 'top-bar-section-homepage' if current_page?(root_path) %>">
